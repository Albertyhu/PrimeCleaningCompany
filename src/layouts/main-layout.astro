---
import Navbar from '../components/navbar.tsx'
import Footer from "@/components/footer/index.astro"; 
import SEO from '@/components/SEO.astro';
import CTAsection from "@/components/CTA-section/index.astro"
import "@/style/global.css"
export interface LayoutProps {
  title : string, 
  customDescription: string, 
  frontmatter: any, 
  CTA?: boolean, 
}

const { title,
    customDescription, 
    frontmatter, 
    CTA,
     } = Astro.props as LayoutProps
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
    <meta title = {title}/>
    <SEO 
    title = {title}
    {frontmatter}
    description ={customDescription ? customDescription : "This is a blogging site."}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Jost:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="icon" href="PrimeCleaningCoFavicon.png" type="image/x-icon">
    <title>{title}</title>
  </head>
  <body>
    <main class='bg-main bg-no-repeat bg-cover bg-center'>
      <Navbar client:load/>
      <slot/>
      <!-- All different pages to be rendered here -->
      {CTA
         &&
        <CTAsection />
      }
      <Footer />
    </main>
    <p class="tracking-tight text-base text-center border border-gray-300 px-12 py-10 lg:text-[22px] lg:leading-[33px] font-jost text-text-gray  bg-primaryColor">
        Copyright Â© Prime Cleaning Co. | Designed by <a class = "text-black font-bold underline" href = "https://www.ladesigninitiative.com" rel="nofollow">LA Design Initiative</a>
    </p>
  </body>
</html>


