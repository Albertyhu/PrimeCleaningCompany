---
const {
    label, 
    subtitle, 
    wrapperStyle, 
} = Astro.props; 
---
<div
class = `flex flex-col align-middle justify-center ${wrapperStyle}`
>
    <div>
        <h4
        class = `text-center uppercase m-auto w-fit h-fit font-jost text-lg`
        >{label}</h4>
        <p
            class = "text-center m-auto w-fit h-fit font-jost text-sm"
        >{subtitle}</p>
    </div>
</div>