---
import ServiceTextComponent from "./service-text-component.astro";
const {
    label, 
    image,
    subtitle
} = Astro.props;

---
<div
    class = "relative flex align-middle justify-center w-full h-[340px] before:content-[''] before:bg-black before:w-full before:h-full before:opacity-40 before:z-[3] before:absolute"
>
    <div
        class="absolute inset-0"
    >
        <img 
        class = "object-cover w-full h-full"
        src= {image.src}
        alt = {label}
    />
    </div>
    <div
        class = `text-white text-center m-auto w-fit h-fit font-jost z-[5]`
    >
        <h4
        class = `uppercase text-lg`
        >{label}</h4>
        <p
        class = "text-white text-center m-auto w-fit h-fit font-jost text-sm"
        >{subtitle}</p>
    </div>
</div>