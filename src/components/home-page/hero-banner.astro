---
import FadeIn from "../interactive/fadeIn.astro";
import Button from "../buttons/link.astro"; 
---

<section class="w-full bg-hero_smallest xm:bg-hero_xm sm:bg-hero_sm lg:bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center relative">
    <div class="lg:max-w-[1200px] w-full mx-auto flex flex-col z-[1]">
        <FadeIn>
            <h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[50%] text-primary-200">Achieve a Peace of Mind</h1>
        </FadeIn>
        <p class="text-base md:text-[22px] pb-5 font-jost text-text-gray-200 w-full lg:max-w-[50%]">Elevate Your Living and Working Experiences with Unmatched Cleanliness</p>
        <Button 
            text="Get Started"
            link="./contact"
        />
    </div>
</section>