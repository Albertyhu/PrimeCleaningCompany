---
import image1 from "@/assets/images/cleaning-before-and-after-faucet1.jpg";
import image2 from "@/assets/images/cleaning-before-and-after-faucet2.jpg"; 
import "./style.css";
const wrapperStyle = "absolute inset-0 w-[400px] mx-auto"
import Slider from './slider.tsx'; 
const imgStyle = ""; 
const HEIGHT_MOBILE = 150;  
const {
  HEIGHT = 419,  
} = Astro.props; 
---
<div
  class = "flex flex-row text-center font-dm text-2xl sm:text-3xl mt-[100px] justify-around w-[300px] mx-auto"
>
  <h3>Before</h3><h3> | </h3> <h3>After</h3>
</div>
<div 
  class='hidden sm:block relative mx-auto'
  style ={{height:`${HEIGHT}px`}}
>
  <Slider 
    HEIGHT = {419}
    WIDTH = {500}
    bgImg = "./before-after/office2-sm.webp"
    fgImg= "./before-after/office1-sm.webp"
    client:only = "react" 
    />
</div>
<div 
  class='block sm:hidden relative mx-auto'
  style ={{height:`${HEIGHT_MOBILE}px`}}
>
  <Slider 
    HEIGHT = {210}
    WIDTH = {300}
    bgImg = "./before-after/office2-xm.webp"
    fgImg= "./before-after/office1-xm.webp"
    client:only = "react" 
    />
</div>
