---
import CircularPicture from './circular-pic.astro'; 
import FallFromTop from '../interactive/fallFromTop.astro'
import UnderlineAnim from '../interactive/underline.astro'
import ReasonPanel from './reason-panel.astro'; 
type reasonType = {
    title: string,
    description: string, 
    titleAlign: string, 
    img: any, 
    containerStyle: string, 
}
const {
    image, 
    paragraph="Clents choose Prime Cleaning Co. for an unparalleled cleaning experience that goes beyond the ordinary. Our commitment to excellence is evident in every meticulous detail, from our skilled team and innovative cleaning technology to our eco-friendly practices. Trust us to transform your space into a pristine haven, where cleanliness meets precision. Elevate your living or working environment with Prime Cleaning Co. â€“ where perfection is our promise and your satisfaction is our priority.",
    reasons, 
} = Astro.props; 
---
<div
    class = "text-center mx-auto"
>
    <UnderlineAnim
    wrapperStyle = "mx-auto my-10"
    >
        <FallFromTop
        wrapperStyle = "mx-auto"
        >
            <h2
                class = "text-3xl font-primary text-center mx-auto"
            >Why choose us</h2>
        </FallFromTop>
    </UnderlineAnim>
    <p
        class = "font-secondary mx-auto w-10/12 sm:w-6/12 text-center"
    >{paragraph}
    </p>
</div>
<div
    class = "flex flex-col lg:flex-row"
>
    <div
        class = "hidden lg:block mr-0 ml-auto w-fit"
    >
        {reasons && reasons.length && 
            reasons.slice(0,2).map((reason: reasonType) => 
            <ReasonPanel
             {...reason} 
             containerStyle = "sm:w-1/12 md:w-9/12 max-w-[350px] my-10 mr-0 ml-auto"
             /> 
        )}
    </div>
    <CircularPicture
        {image}
    />
    <div
        class = "flex flex-col md:flex-row md:flex-wrap lg:flex-col mx-auto"
    > 
        <div
            class = "block lg:hidden"
        >
            {reasons && reasons.length && 
                reasons.slice(0,2).map((reason: reasonType) => <ReasonPanel {...reason} /> )
            }
        </div>
        <div>
            {reasons && reasons.length && 
                reasons.slice(2,5).map((reason: reasonType)  => 
                <ReasonPanel 
                    {...reason} 
                    containerStyle = "mx-auto w-10/12 md:w-9/12 max-w-[350px] my-10 mx-auto lg:mr-auto lg:ml-0 "
                /> 
                )
            }
        </div>
    </div>
</div>
